* {
	margin: 0;
	padding: 0;
}
body {
	font-family: 'Nunito Sans', sans-serif;
}
.main {
	background: linear-gradient(180deg, #0C4C7B -100%, #1E2F40 100%);
}
.container {
	max-width: 1180px;
	margin: 0 auto;
	display: flex;
	justify-content: space-between;
}
img {
	width: 100px;
	position: relative;
}
.text {
	color: #FAF9F9;
	flex: 0 0 580px;
	padding-top: 170px;
	padding-bottom: 170px;
}
h1 {
	font-weight: 800;
	font-size: 120px;
	line-height: 140px;
	margin-bottom: 40px;

	text-transform: uppercase;

	color: #FAF9F9;
}
h1 span {
	display: block;
	font-weight: bold;
	font-size: 30px;
	line-height: 38px;
	margin-bottom: 10px;

	color: #FBB731;
}
p {
	font-family: 'Lato', sans-serif;
	font-size: 19px;
	line-height: 140%;
	margin-bottom: 42px;

	color: #DEDEDE;
}
a {
	color: #1E2F40;
	background-color: #FBB731;
	border-radius: 5px;
	text-decoration: none;
	padding: 20px 45px;
	display: inline-block;
	text-transform: uppercase;
	font-size: 14px;
	font-weight: bold;
	
	font-family: Nunito Sans;
	font-style: normal;
	
	line-height: 18px;
	/* identical to box height, or 129% */

	text-align: center;
}
.visual {
	flex-grow: 1;
	display: flex;
	justify-content: flex-end;
	position: relative;
	
	width: 829px;
	height: 861px;
	left: 890px;
	top: 1px;
}
.bg {
	width: 432px;
	height: 100%;
    background: linear-gradient(2.42deg, #F37335 -19.6%, #FBB731 100.79%, #FDC830 100.79%);
}